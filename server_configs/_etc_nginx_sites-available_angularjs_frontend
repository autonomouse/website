server {
    # listen for ipv4; this line is default and implied:
    listen 80;

    # listen for ipv6
    listen [::]:80;

    # Make site accessible from http://www.localhost/
    server_name www.localhost;

	index index.html index.htm index.nginx-debian.html;

    location /static/ {
        root /home/darren/Repositories/Personal_Projects/website/angularjs_frontend/static;
    }

    location / {
        add_header 'Access-Control-Allow-Origin' *;
		root /home/darren/Repositories/Personal_Projects/website/angularjs_frontend;
        try_files $uri $uri/ /index.html = 404;
    }

}
